{
  //https://pycodestyle.pycqa.org/en/latest/intro.html#error-codes
  //https://pypi.org/project/autopep8/
  "python.formatting.autopep8Args": ["--indent-size=2", "--ignore=W505,W690,E3,E226,E501,E701"],
  "editor.renderControlCharacters": true,
  "debug.onTaskErrors": "showErrors",
  "editor.renderWhitespace": "all",
  "workbench.colorTheme": "Default Light+", //Monokai, Quiet Light, Default Light+, Visual Studio Dark, Solarized Dark, Solarized Light, Tomorrow Night Blue
  "editor.comments.ignoreEmptyLines": false,
  "editor.copyWithSyntaxHighlighting": false,
  "editor.definitionLinkOpensInPeek": true,
  "editor.detectIndentation": false,
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": false,
  "workbench.editor.enablePreview": false,
  "workbench.editor.enablePreviewFromQuickOpen": false,
  "editor.gotoLocation.multipleDefinitions": "goto",
  "cmake.configureOnOpen": false,
  "cmake.debugConfig": {
    "name": "(gdb) Launch",
    "type": "cppdbg",
    "request": "launch",
    "program": "${command:cmake.launchTargetPath}",
    "console": "externalTerminal",
    "args": [
      "log_async=false",
      "package_loc=_debug"
    ],
    "stopAtEntry": false,
    "cwd": "${command:cmake.launchTargetDirectory}",
    "environment": [
      {
        "name": "PATH",
        "value": "$PATH:${command:cmake.launchTargetDirectory}"
      }
    ],
    "externalConsole": false,
    "MIMode": "gdb",
    "setupCommands": [
      {
        "description": "Enable pretty-printing for gdb",
        "text": "-enable-pretty-printing",
        "ignoreFailures": true,
      },
      {
        "description": "Skip <path> files",
        "text": "-interpreter-exec console \"skip -gfi /build/glibc-YYA7BZ/glibc-2.31/*.c\""
      }
    ]
  },
  "files.associations": {
    "*.tcc": "cpp",
    "cctype": "cpp",
    "clocale": "cpp",
    "cmath": "cpp",
    "cstdint": "cpp",
    "cstdio": "cpp",
    "cstdlib": "cpp",
    "cwchar": "cpp",
    "cwctype": "cpp",
    "exception": "cpp",
    "initializer_list": "cpp",
    "iosfwd": "cpp",
    "iostream": "cpp",
    "istream": "cpp",
    "limits": "cpp",
    "new": "cpp",
    "ostream": "cpp",
    "stdexcept": "cpp",
    "streambuf": "cpp",
    "string": "cpp",
    "string_view": "cpp",
    "system_error": "cpp",
    "type_traits": "cpp",
    "typeinfo": "cpp",
    "array": "cpp",
    "functional": "cpp",
    "tuple": "cpp",
    "utility": "cpp",
    "atomic": "cpp",
    "bit": "cpp",
    "chrono": "cpp",
    "codecvt": "cpp",
    "cstdarg": "cpp",
    "cstddef": "cpp",
    "ctime": "cpp",
    "deque": "cpp",
    "unordered_map": "cpp",
    "vector": "cpp",
    "algorithm": "cpp",
    "iterator": "cpp",
    "memory": "cpp",
    "memory_resource": "cpp",
    "numeric": "cpp",
    "optional": "cpp",
    "random": "cpp",
    "ratio": "cpp",
    "fstream": "cpp",
    "iomanip": "cpp",
    "sstream": "cpp",
    "cstring": "cpp",
    "cinttypes": "cpp",
    "filesystem": "cpp",
    "map": "cpp",
    "csignal": "cpp",
    "strstream": "cpp",
    "bitset": "cpp",
    "complex": "cpp",
    "condition_variable": "cpp",
    "list": "cpp",
    "set": "cpp",
    "mutex": "cpp",
    "thread": "cpp",
    "cfenv": "cpp",
    "typeindex": "cpp",
    "valarray": "cpp",
    "variant": "cpp",
    "testapp": "cpp",
    "*.ipp": "cpp",
    "regex": "cpp",
    "shared_mutex": "cpp",
    "unordered_set": "cpp"
  },
}
